@model BIC.Models.Request
@using BIC.Utility 
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    
    <div class="card-header">
        <div class="row col-12">
            <div class="col-12 col-md-6">
                <h2>Request id: @Model.Id</h2>
            </div>
            <div class="col-12 col-md-6">
                <h2>Status: @Model.Status</h2>
            </div>
        </div>
    </div>

    <div class="card-body">

        <div class="row col-12">
            <div class="col-6">
                <h5>First Name: @Model.FirstName</h5>
            </div>
            <div class="col-6">
                <h5>Last Name: @Model.LastName</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>Company: @Model.CompanyName</h5>
            </div>
            <div class="col-6">
                <h5>Branch: @Model.Branch</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>Email: @Model.Email</h5>
            </div>
            <div class="col-6">
                <h5>Mobile: @Model.Mobile</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>Address: @Model.Address</h5>
            </div>
            <div class="col-6">
                <h5>City: @Model.City</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>Service Type: @Model.ServiceType</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>Message:</h5>
            </div>
        </div>

        <div class="row col-12 pt-3">
            <div class="col-6">
                <h5>@Html.Raw(Model.Message)</h5>
            </div>
        </div>

    </div>

    <div class="card-footer">

        @if (Model.Status == SD.Submitted)
        {
            <div class="row col-12">
                <div class="col-2">
                    <a asp-action="Approved" asp-route-id="@Model.Id" class="btn btn-primary text-white">Approved</a>
                </div>
                <div class="col-2">
                    <a asp-action="Index" class="btn btn-primary text-white">Back to List</a>
                </div>
            </div>
        }
        else
        {
            @if (Model.Status == SD.Pending)
            {
                <div class="row col-12">
                    <div class="col-2">
                        <a asp-action="Completed" asp-route-id="@Model.Id" class="btn btn-primary text-white">Completed</a>
                    </div>
                    <div class="col-2">
                        <a asp-action="Index" class="btn btn-primary text-white">Back to List</a>
                    </div>
                </div>
            }
            else
            {
                @if (Model.Status == SD.WorkCompleted)
                {
                    <div class="row col-12">
                        <div class="col-3">
                            <a asp-action="InvoiceSub" asp-route-id="@Model.Id" class="btn btn-primary text-white">Invoice Submitted</a>
                        </div>
                        <div class="col-2">
                            <a asp-action="Index" class="btn btn-primary text-white">Back to List</a>
                        </div>
                    </div>
                }
                else
                {
                    @if (Model.Status == SD.InvoiceSubmitted)
                    {
                        <div class="row col-12">
                            <div class="col-2">
                                <a asp-action="Payment" asp-route-id="@Model.Id" class="btn btn-primary text-white">Paid</a>
                            </div>
                            <div class="col-2">
                                <a asp-action="Index" class="btn btn-primary text-white">Back to List</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row col-12">
                            <div class="col-2">
                                <a asp-action="Index" class="btn btn-primary text-white">Back to List</a>
                            </div>
                        </div>
                    }
                }
            }
        }

    </div>

</div>