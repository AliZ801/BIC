@model BIC.Models.ViewModel.RequestVM
@{
    ViewData["Title"] = "ServReq";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="ServReq">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card" style="border-color: #0094ff">

        <div class="card-header" style="background-color: #004481">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Need Our Service</h2>
                </div>
            </div>
        </div>

        <div class="card-body bg-light">

            <div class="row col-12 m-0 m-auto">

                <!--First and Last Name-->
                <div class="row col-12 form-group">
                    <div class="col-2">
                        <label asp-for="@Model.Request.FirstName"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.Request.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                    <div class="col-2">
                        <label asp-for="@Model.Request.LastName"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.LastName" class="form-control" />
                        <span asp-validation-for="@Model.Request.LastName" class="text-danger"></span>
                    </div>
                </div>

                <!--Company and Branch Name-->
                <div class="row col-12 form-group">
                    <div class="col-2">
                        <label>Company</label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.CompanyName" class="form-control" />
                        <span asp-validation-for="@Model.Request.CompanyName" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                    <div class="col-2">
                        <label asp-for="@Model.Request.Branch"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.Branch" class="form-control" />
                        <span asp-validation-for="@Model.Request.Branch" class="text-danger"></span>
                    </div>
                </div>

                <!--Email and Mobile-->
                <div class="row col-12 form-group">
                    <div class="col-2">
                        <label asp-for="@Model.Request.Email"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.Email" class="form-control" />
                        <span asp-validation-for="@Model.Request.Email" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                    <div class="col-2">
                        <label asp-for="@Model.Request.Mobile"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.Mobile" class="form-control" />
                        <span asp-validation-for="@Model.Request.Mobile" class="text-danger"></span>
                    </div>
                </div>

                <!--Address and City-->
                <div class="row col-12 form-group">
                    <div class="col-2">
                        <label asp-for="@Model.Request.Address"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.Address" class="form-control" />
                        <span asp-validation-for="@Model.Request.Address" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                    <div class="col-2">
                        <label asp-for="@Model.Request.City"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.City" class="form-control" />
                        <span asp-validation-for="@Model.Request.City" class="text-danger"></span>
                    </div>
                </div>

                <!--Message and Service Type-->
                <div class="row col-12 form-group">
                    <div class="col-2">
                        <label asp-for="@Model.Request.Message"></label>
                    </div>
                    <div class="col-3">
                        <textarea asp-for="@Model.Request.Message" class="form-control" style="height:120px"></textarea>
                        <span asp-validation-for="@Model.Request.Message" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                    <div class="col-2">
                        <label asp-for="@Model.Request.ServiceType"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.Request.ServiceType" class="form-control" />
                        <span asp-validation-for="@Model.Request.ServiceType" class="text-danger"></span>
                    </div>
                </div>

            </div>

        </div>

        <div class="card-footer" style="background-color: #004481">

            <div class="row col-12">
                <div class="col-2">
                    <button type="submit" class="btn btn-primary text-white form-control">Submit</button>
                </div>
            </div>

        </div>

    </div>

</form>

@section Scripts{ 
    <style>
        input[type=text], textarea {
            border-color: #0094ff;
        }
        label {
            font-weight: 400;
        }
    </style>
