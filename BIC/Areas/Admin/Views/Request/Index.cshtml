@using BIC.Utility
@{
    ViewData["Title"] = "Service Request List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var status = Context.Request.Query["status"];

    var submitted = "text-primary";
    var pending = "text-primary";
    var completed = "text-primary";
    var invoiceSubmitted = "text-primary";
    var paymentRecieved = "text-primary";
    var all = "text-primary";

    if (status == "Submitted")
    {
        submitted = "active text-white";
    }
    else
    {
        if (status == "Pending")
        {
            pending = "active text-white";
        }
        else
        {
            if (status == "Work Completed")
            {
                completed = "active text-white";
            }
            else
            {
                if (status == "Invoice Submitted")
                {
                    invoiceSubmitted = "active text-white";
                }
                else
                {
                    if (status == "Payment Recieved")
                    {
                        paymentRecieved = "active text-white";
                    }
                    else
                    {
                        all = "active text-white";
                    }
                }
            }
        }
    }
}

<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h3 class="text-primary">Request List</h3>
        </div>
        <div class="p-2">
            @*<ul class="list-group list-group-horizontal-sm">
                    <li class="list-group-item" @pending>
                        <a asp-action="Index" asp-controller="PropertyRequest" asp-route-status="pending" style="text-decoration:none;">Pending</a>
                    </li>
                    <li class="list-group-item" @approved>
                        <a asp-action="Index" asp-controller="PropertyRequest" asp-route-status="approved" style="text-decoration:none;">Approved</a>
                    </li>
                    <li class="list-group-item" @delete>
                        <a asp-action="Index" asp-controller="PropertyRequest" asp-route-status="delete" style="text-decoration:none;">Delete</a>
                    </li>
                    <li class="list-group-item" @all>
                        <a asp-action="Index" asp-controller="PropertyRequest" asp-route-status="all" style="text-decoration:none;">All</a>
                    </li>
                </ul>*@
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="submitted" asp-action="Index">
                    <li class="list-group-item @submitted">Submitted</li>
                </a>
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="pending" asp-action="Index">
                    <li class="list-group-item @pending">Pending</li>
                </a>
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="workCompleted" asp-action="Index">
                    <li class="list-group-item @completed">Completed</li>
                </a>
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="invoiceSubmitted" asp-action="Index">
                    <li class="list-group-item @invoiceSubmitted">Invoice Submitted</li>
                </a>
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="paymentRecieved" asp-action="Index">
                    <li class="list-group-item @paymentRecieved">Payment</li>
                </a>
                <a style="text-decoration:none" asp-controller="Request" asp-route-status="all" asp-action="Index">
                    <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Company Name</th>
                <th>Branch Name</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/request.js"></script>
}